<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="content_progress">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/content_offset</item>
    </style>

    <style name="content_err_msg" parent="@style/Base.TextAppearance.AppCompat.Large">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/content_offset</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
    </style>

</resources>
