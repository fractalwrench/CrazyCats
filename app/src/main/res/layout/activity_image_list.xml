<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper
    android:id="@+id/image_list_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".image.list.ImageListActivity"
    >

    <ProgressBar
        android:id="@+id/image_list_progress"
        style="@style/content_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/image_list_err"
        style="@style/content_err_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Error"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/image_list_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</ViewFlipper>