<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.fractalwrench.crazycats"
          xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <application
        android:name=".CrazyCatsApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name=".image.list.ImageListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".image.detail.ImageDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName=".image.list.ImageListActivity"
            android:theme="@style/AppTheme"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fractalwrench.crazycats.image.list.ImageListActivity"
                />
        </activity>
    </application>

</manifest>